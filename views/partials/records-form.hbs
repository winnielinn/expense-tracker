<div class="row g-4 align-items-center mt-0 m-3">
  <div class="col-4">
    <label for="name" class="col-form-label">名稱 <span style="color: #e83e8c;">*</span></label>
  </div>
  <div class="col-8">
    <input type="text" id="name" name="name" class="form-control">
  </div>
  <div class="col-4">
    <label for="date" class="col-form-label">日期 <span style="color: #e83e8c;">*</span></label>
  </div>
  <div class="col-8">
    <input type="date" id="date" name="date" class="form-control">
  </div>
  <div class="col-4">
    <label for="category" class="col-form-label">類別 <span style="color: #e83e8c;">*</span></label>
  </div>
  <div class="col-8">
    <select class="form-control" name="category" id="category">
      <option value="">選擇類別</option>
      <option value="1">1 - 3 年</option>
      <option value="3">3 - 5 年</option>
      <option value="5">5 年以上</option>
    </select>
  </div>
  <div class="col-4">
    <label for="amount" class="col-form-label">金額 <span style="color: #e83e8c;">*</span></label>
  </div>
  <div class="col-8">
    <input type="number" id="amount" name="amount" class="form-control" min="1">
  </div>
</div>